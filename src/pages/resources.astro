---
// src/pages/resources.astro
import Layout from '../layouts/Layout.astro';
import ResourceList from '../components/ResourceList.jsx';

const SHEET_CSV_URL =
  'https://docs.google.com/spreadsheets/d/e/2PACX-1vQqkqC2AftoFR9eE3kbpFj9OJwoksCCLc2mAZ6lG5ACfq7vWbpkPsZ2RP7c8hWZC6vcS-bG4f-2qfeE/pub?output=csv';
---

<Layout title="Resources">
  <h1>Resources</h1>
  <p>
    Heritage Restored generally supports all the ministries listed here but may
    not be in complete agreement on everything that ministry stands for.
  </p>

  <style is:global>
    /* Flex-based two-column layout */
    .columns {
      display: flex;
      gap: 2rem;
    }
    .column {
      flex: 1;
    }
    @media (max-width: 600px) {
      .columns {
        flex-direction: column;
      }
    }

    /* Category styling */
    .category {
      margin-bottom: 2rem;
    }
    .category h2 {
      color: #003366; /* default heading color */
      margin-bottom: 0.5rem;
    }
    .category ul {
      margin: 0;
      padding-left: 1.2rem;
    }
    .columns a {
      color: #004499; /* default link color */
      text-decoration: none;
    }

/* Dark‚Äêmode overrides */
    @media (prefers-color-scheme: dark) {
      /* Headings in dark use a lighter sky-blue */
      .category h2 {
        color: #87CEFA;
      }
      /* Links slightly different pastel blue */
      .columns a {
        color: #ADD8E6;
      }
    }
  </style>

  <!-- Hydrate & render live sheet data -->
  <ResourceList client:load csvUrl={SHEET_CSV_URL} />
</Layout>
